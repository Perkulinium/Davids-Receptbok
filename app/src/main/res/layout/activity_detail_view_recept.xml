<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detailViewRecept">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="top">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="369dp" app:srcCompat="@color/colorAccent" android:id="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                    android:text="Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="411dp"
                    tools:layout_editor_absoluteX="81dp" android:id="@+id/titleText" android:editable="false"
                    android:textSize="24sp" android:textAlignment="center"/>
            <TextView
                    android:text="Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/info" android:textAlignment="center"
                    android:textSize="18sp"/>
            <TextView
                    android:text="Ingredienser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/ingrediText" android:textSize="18sp"/>
            <TextView
                    android:text="Recept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="411dp"
                    tools:layout_editor_absoluteX="81dp" android:id="@+id/receptText" android:editable="false"
                    android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_star"
            android:id="@+id/favButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.976"
            android:background="@android:color/transparent"/>
</android.support.constraint.ConstraintLayout>